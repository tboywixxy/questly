{
  "expo": {
    "name": "Questly",
    "slug": "questly",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "questly",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "icon": "./assets/images/logo-em-bg-black.png",

    "splash": {
      "image": "./assets/images/logo-em-bg-black.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF",
      "dark": {
        "image": "./assets/images/logo-rm-bg-light.png",
        "backgroundColor": "#000000",
        "resizeMode": "contain"
      }
    },

    "ios": {
      "supportsTablet": true,
      "icon": "./assets/images/logo-em-bg-black.png",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We use your location to tag your post with your city/state."
      },
      "bundleIdentifier": "com.questly.app"
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo-em-bg-black.png",
        "backgroundColor": "#000000"
      },
      "package": "com.questly.app",
      "googleServicesFile": "./google-services.json",
      "softwareKeyboardLayoutMode": "pan",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,

      /* ðŸ‘‡ Use your light logo as the small notification icon */
      "notification": {
        "icon": "./assets/images/logo-rm-bg-light.png",
        "color": "#2563EB"
      }
    },

    /* ðŸ‘‡ Global notification icon (Expo uses this as default) */
    "notification": {
      "icon": "./assets/images/logo-rm-bg-light.png",
      "color": "#2563EB"
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-notifications"
    ],
    "extra": {
      "eas": {
        "projectId": "eb2ce5d4-0057-40a2-9dca-d410fb57be6b"
      },
      "EXPO_PUBLIC_EAS_PROJECT_ID": "eb2ce5d4-0057-40a2-9dca-d410fb57be6b",
